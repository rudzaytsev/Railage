<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app
        xmlns="http://java.sun.com/xml/ns/j2ee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd"
        version="2.5">

  <display-name>Archetype Created Web Application</display-name>
  <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>com.tsystems.jschool.railage.view.filters.AccessFilter</filter-class>
  </filter>
    <filter>
        <filter-name>CleaningSessionAttributesFilter</filter-name>
        <filter-class>com.tsystems.jschool.railage.view.filters.CleaningSessionAttributesFilter</filter-class>
    </filter>
    <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <servlet-class>com.tsystems.jschool.railage.view.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>RegisterServlet</servlet-name>
      <servlet-class>com.tsystems.jschool.railage.view.servlets.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>TrainsServlet</servlet-name>
      <servlet-class>com.tsystems.jschool.railage.view.servlets.TrainsServlet</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>TrainRideServlet</servlet-name>
      <servlet-class>com.tsystems.jschool.railage.view.servlets.TrainRideServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>StationsServlet</servlet-name>
    <servlet-class>com.tsystems.jschool.railage.view.servlets.StationsServlet</servlet-class>
  </servlet>
  <servlet>
      <servlet-name>RoutesServlet</servlet-name>
      <servlet-class>com.tsystems.jschool.railage.view.servlets.RoutesServlet</servlet-class>
  </servlet>  
  <servlet-mapping>
      <servlet-name>LoginServlet</servlet-name>
      <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>RegisterServlet</servlet-name>
      <url-pattern>/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>StationsServlet</servlet-name>
      <url-pattern>/StationsServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
        <servlet-name>TrainsServlet</servlet-name>
        <url-pattern>/TrainsServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>TrainsServlet</servlet-name>
      <url-pattern>/trains/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>TrainRideServlet</servlet-name>
      <url-pattern>/rides/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>StationsServlet</servlet-name>
      <url-pattern>/stations/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
      <servlet-name>RoutesServlet</servlet-name>
      <url-pattern>/routes/*</url-pattern>
  </servlet-mapping>  
  <filter-mapping>
      <filter-name>AccessFilter</filter-name>
      <url-pattern>/trains.html</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CleaningSessionAttributesFilter</filter-name>
    <url-pattern>/*Servlet</url-pattern>
    <url-pattern>/trains/*</url-pattern>
    <url-pattern>/rides/*</url-pattern>
    <url-pattern>/routes/*</url-pattern>
    <url-pattern>/stations/*</url-pattern>
  </filter-mapping>

  <welcome-file-list>
      <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
